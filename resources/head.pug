meta(name="viewport" content="width=device-width, initial-scale=1")
link(rel="canonical" href="https://trntxt.uk"+(stationCodePath || url || '/'))
- if (stationCodePath === undefined) stationCodePath = '/';
link(rel="manifest" href=stationCodePath+"manifest.json")
meta(name="msapplication-config" content=stationCodePath+"browserconfig.xml")

link(rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32")
link(rel="apple-touch-icon" sizes="120x120" href=stationCodePath+"apple-touch-icon-120x120.png") 
link(rel="apple-touch-icon" sizes="152x152" href=stationCodePath+"apple-touch-icon-152x152.png") 
link(rel="apple-touch-icon" sizes="167x167" href=stationCodePath+"apple-touch-icon-167x167.png") 
link(rel="apple-touch-icon" sizes="180x180" href=stationCodePath+"apple-touch-icon-180x180.png") 
meta(name="apple-mobile-web-app-title" content="trntxt")
meta(name="application-name" content=" ")
if fromStation == undefined
  meta(property="og:title" content="Train Text")
else if toStation == undefined
  meta(property="og:title" content="Train Text: " + departureObject.fromStation.stationName)
else
  meta(property="og:title" content="Train Text: " + departureObject.fromStation.stationName + " to " + departureObject.toStation.stationName)
meta(property="og:description" content="A data-friendly train times service for Great Britain.")
meta(property="og:type" content="website")
meta(property="og:image" content=stationCodePath+"android-chrome-192x192.png")

title= pageTitle
style
  include ../dist/public/style.css
